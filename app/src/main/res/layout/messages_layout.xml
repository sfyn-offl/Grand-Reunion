<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_centerVertical="true"

        android:layout_marginStart="5dp"
        android:layout_marginTop="15sp"
        android:src="@drawable/profile"
        >
    </de.hdodenhof.circleimageview.CircleImageView>




    <TextView
        android:id="@+id/receiver_message_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2sp"
        android:layout_below="@+id/receiver_message_text"
        android:textSize="12sp"
        android:layout_alignStart="@+id/receiver_message_text"
        android:text="Reciever Name"
        >
    </TextView>
    <TextView
        android:id="@+id/receiver_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        android:layout_below="@+id/receiver_message_time"
        android:layout_toEndOf="@+id/receiver_message_text"
        android:text="Recieved Date"
        >
    </TextView>
    <TextView
        android:id="@+id/receiver_message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:layout_toEndOf="@+id/receiver_message_text"
        android:layout_marginStart="5dp"
        android:textSize="10sp"
        android:text="Recieved Time"
        >
    </TextView>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:padding="10dp"
        android:textSize="14sp"
        android:maxWidth="250dp"
        android:layout_marginStart="5dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/message_profile_image"
        android:text="Reciever Messages Here"
        android:background="@drawable/reciever_messages_layout"
        >
    </TextView>




    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:text="Sender Messages Here"
        android:layout_centerVertical="true"
        android:maxWidth="250dp"
        android:textSize="14sp"
        android:padding="10sp"
        android:background="@drawable/sender_messages_layout"
        >
    </TextView>

    <TextView
        android:id="@+id/sender_message_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/sender_message_text"
        android:layout_centerVertical="true"
        android:layout_marginStart="-60dp"
        android:layout_marginEnd="5sp"
        android:text="Sender Date"
        android:paddingVertical="10sp"
        android:textSize="10sp">

    </TextView>


</RelativeLayout>